{
	"name": "External Launcher",
	"description": "Launches an external command using the current url as an argument",
	"version": "0.0.1",
	"manifest_version": 2,
        "icons": { "16": "icon16.png",
                   "48": "icon48.png",
                  "128": "icon128.png" },

	"homepage_url": "https://github.com/Bjwebb/chrome-external-launcher",

	"permissions": ["contextMenus", "tabs", "storage", "http://*/*", "https://*/*", "ftp://*/*"],

	//"options_page": "options.html",

        "browser_action": {
            "default_icon": "icon.png",
            "default_popup": "popup.html"
        },

	"plugins": [
		{ "path": "libsimpleGetPlugin.so", "public": false },
		{ "path": "libsimpleGetPlugin64.so", "public": false },
		{ "path": "npsimpleGetPlugin.dll", "public": false }
	]
}

